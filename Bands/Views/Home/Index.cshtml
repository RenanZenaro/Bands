@model List<Banda>
@{
    ViewData["Title"] = "Home";
}

<section class="pt-5 pb-3 text-center container-fluid bg-secondary">
    <div class="row">
        <div class="col mx-auto">
            <h1 class="text-black">Bands</h1>
            <div class="group">
                <button id="btn-all" class="btn btn-md my-2 text-white bg-black btn-filter">Ver
                    Todos</button>
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:rgb(51, 47, 47)">Heavy Metal</button>
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:rgb(51, 47, 47)">Thrash Metal</button>
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:rgb(51, 47, 47)">Power Metal</button>
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:rgb(51, 47, 47)">Hard Rock</button>
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:rgb(51, 47, 47)">Nu Metal</button>
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:rgb(51, 47, 47)">Death Metal</button>
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:rgb(51, 47, 47)">Glam Metal</button>
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:rgb(51, 47, 47)">Rock Psicodélico</button>
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:rgb(51, 47, 47)">Rock Progressivo</button>
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:rgb(51, 47, 47)">Punk Rock</button>
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:rgb(51, 47, 47)">Blues Rock</button>
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:rgb(51, 47, 47)">Grunge</button>
            </div>
        </div>
    </div>
</section>

<div class="album py-5 bg-secondary">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

            @foreach (var banda in Model)
            {
            <!-- Card Pokemon - Inicio -->
            <div class="col">
                <div class="card shadow-sm cursor-pointer @string.Join(' ', banda.Tipo)">
                    <img src="@banda.Imagem" class="card-img-top" width="100%" height="300%" alt="@banda.Nome" />
                    <div class="card-body">
                        <p class="card-text mb-0">Nº @banda.Numero.ToString("000")</p>
                        <h3 class="card-title">@banda.Nome</h3>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                @foreach (var tipo in banda.Tipo)
                                {
                                <a href="#" class="btn my-2 text-white" style="background-color:rgb(51, 47, 47)">@tipo</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Card Pokemon - Fim -->
            }

            <div id="zeroBanda" class="col-lg-12 text-center" hidden>
                <h1 class="my-3 text-danger">Nenhuma Banda Encontrada</h1>
            </div>
        </div>


    </div>
</div>


